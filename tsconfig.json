{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
